<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Gradient background for the badge -->
    <gradient
        android:angle="0"
        android:startColor="#FF5252"
        android:endColor="#FF3B30"
        android:type="linear" />

    <!-- Rounded corners -->
    <corners android:radius="8dp" />

    <!-- Optional: Add a slight shadow for depth -->
    <padding
        android:left="2dp"
        android:top="1dp"
        android:right="2dp"
        android:bottom="2dp" />

</shape>